<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 absolute inset-0 -mt-16 main-page">
  <div class="relative pt-32 pb-16 px-4">
    <div class="max-w-md mx-auto text-center text-white">
      <h1 class="text-3xl font-bold mb-6">Edit Profile</h1>

      <%= render "shared/error_messages", resource: resource if resource.errors.any? %>

      <% flash.each do |name, msg| %>
        <div class="<%= name == 'notice' ? 'bg-green-50' : 'bg-red-50' %> rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <% if name == 'notice' %>
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium <%= name == 'notice' ? 'text-green-800' : 'text-red-800' %>">
                <%= msg %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8 space-y-4" }) do |f| %>

        <div>
          <%= f.text_field :username,
                           autofocus: true,
                           autocomplete: "username",
                           placeholder: "Username",
                           class: "w-full px-4 py-2 rounded-md text-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 bg-red-50' if resource.errors[:username].any?}" %>
        </div>

        <div>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            placeholder: "Email",
                            class: "w-full px-4 py-2 rounded-md text-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 bg-red-50' if resource.errors[:email].any?}" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-200">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               placeholder: "New Password (leave blank if no change)",
                               class: "w-full px-4 py-2 rounded-md text-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 bg-red-50' if resource.errors[:password].any?}" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-sm text-gray-200"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               placeholder: "Confirm New Password",
                               class: "w-full px-4 py-2 rounded-md text-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 bg-red-50' if resource.errors[:password_confirmation].any?}" %>
        </div>

        <div>
          <%= f.password_field :current_password,
                               autocomplete: "current-password",
                               placeholder: "Current Password",
                               class: "w-full px-4 py-2 rounded-md text-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 bg-red-50' if resource.errors[:current_password].any?}" %>
          <p class="mt-1 text-sm text-gray-200">We need your current password to confirm changes</p>
        </div>

        <div>
          <%= f.submit "Update",
                       class: "w-full px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-gray-200/30">
        <h2 class="text-xl font-semibold mb-4">Cancel Account</h2>
        <p class="text-gray-200 mb-4">Unhappy with your account?</p>
        <%= button_to "Cancel my account",
                      registration_path(resource_name),
                      data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                      method: :delete,
                      class: "w-full px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" %>
      </div>

      <%= link_to "Back",
                  :back,
                  class: "inline-block mt-4 text-gray-200 hover:text-white transition-colors duration-200" %>
    </div>
  </div>
</div>