<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 absolute inset-0 -mt-16 main-page">
  <div class="relative pt-32 pb-16 px-4">
    <div class="max-w-md mx-auto text-center text-white">
      <h1 class="text-3xl font-bold mb-6">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-4" }) do |f| %>
        <div>
          <%= f.label :username, class: "sr-only" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "w-full px-4 py-2 rounded-md text-gray-800" %>
        </div>
        <div>
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full px-4 py-2 rounded-md text-gray-800" %>
        </div>

        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full px-4 py-2 rounded-md text-gray-800" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "sr-only" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "w-full px-4 py-2 rounded-md text-gray-800" %>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "w-full px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <p class="mt-4 text-gray-200">Already have an account? <%= link_to "Sign In", new_user_session_path, class: "text-blue-400" %></p>
    </div>
  </div>
</div>
