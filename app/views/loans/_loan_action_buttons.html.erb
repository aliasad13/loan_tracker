<div class="space-x-2">
  <% if loan.may_accept_adjustment? %>
    <%= button_to "Accept Adjustment", accept_adjustment_loan_path(loan), method: :patch, class: "inline-block px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700" %>
  <% end %>
</div>

<div class="space-x-2">
  <% if loan.may_reject? %>
    <%= button_to "Reject", reject_loan_path(loan), method: :patch, class: "inline-block px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700" %>
  <% end %>
</div>

<div class="space-x-2">
  <% if loan.may_request_readjustment? %>
    <%= button_to "Readjust", request_readjustment_loan_path(loan), method: :patch, class: "inline-block px-3 py-1 bg-yellow-600 text-white rounded hover:bg-yellow-700" %>
  <% end %>
</div>

<div class="space-x-2">
  <% if loan.may_open_loan? %>
    <%= button_to "Open", open_loan_loan_path(loan), method: :patch, class: "inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  <% end %>
</div>


<% if current_user.admin? %>
  <div class="space-x-2">
    <% if loan.may_approve? %>
      <%= button_to "Approve", approve_loan_path(loan), method: :patch, class: "inline-block px-3 py-1 bg-green-600 text-white rounded hover:bg-gray-700" %>
    <% end %>
  </div>


