<div class="container mx-auto px-4 py-8 bg-gray-900">
  <h1 class="text-3xl font-bold mb-8">Request a New Loan</h1>

  <div class="bg-gray-800 rounded-lg shadow p-6 text-gray-100">
    <%= form_with(model: @loan, local: true, html: { onsubmit: "setTotalAmountDue()" }) do |form| %>
      <% if @loan.errors.any? %>
        <div class="mb-4">
          <div class="font-medium text-red-600">
            <%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:
          </div>
          <ul class="list-disc list-inside text-red-600">
            <% @loan.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :amount, class: "block text-gray-100" %>
        <%= form.number_field :amount, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white py-2 px-3 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 placeholder-gray-400 ", step: "0.01", placeholder: "Enter loan amount" %>
      </div>

      <%= form.hidden_field :total_amount_due, id: "total_amount_due" %>


      <div class="mb-4">
        <%= form.label :interest_rate, class: "block text-gray-100" %>
        <%= form.number_field :interest_rate,
                              class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-white py-2 px-3 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 placeholder-gray-400",
                              step: "0.01",
                              min: "1",
                              max: "99",
                              placeholder: "Enter interest rate (%)" %>
      </div>

      <div class="mt-6">
        <%= form.submit "Request Loan", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
        <%= link_to "Cancel", loans_path, class: "ml-4 inline-block text-blue-600 hover:text-blue-900" %>
      </div>
    <% end %>
  </div>
</div>

<script>
    function setTotalAmountDue() {
        const amount = parseFloat(document.getElementById("loan_amount").value) || 0;
        document.getElementById("total_amount_due").value = amount;
    }
</script>