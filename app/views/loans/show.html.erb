<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <%= link_to "← Back", :back, class: "text-blue-600 hover:text-blue-900" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-3xl font-bold mb-6">Loan Details</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-600">Amount</p>
        <p class="text-2xl font-bold">$<%= number_with_precision(@loan.amount, precision: 2) %></p>
      </div>
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-600">Interest Rate</p>
        <p class="text-2xl font-bold"><%= @loan.interest_rate %>%</p>
      </div>
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-600">Status</p>
        <p class="text-2xl font-bold capitalize"><%= @loan.state %></p>
      </div>
      <% if @loan.state == 'waiting_for_adjustment_acceptance' %>
      <div class="bg-gray-50 p-4 rounded">
        <p class="text-gray-600">Status</p>
        <%= render 'loan_action_buttons', loan: @loan %>
        </div>
        <% end %>
    </div>

    <% if @adjustments.any? %>
      <div class="mt-8">
        <h2 class="text-xl font-semibold mb-4">Adjustment History</h2>
        <div class="bg-gray-50 rounded p-4">
          <% @adjustments.each do |adjustment| %>
            <div class="mb-4 last:mb-0">
              <p class="font-medium"><%= adjustment.created_at.in_time_zone("Asia/Kolkata").strftime("%B %d, %Y %I:%M %p") %></p>
              <p class="text-gray-600">Amount adjusted from $<%= number_with_precision(adjustment.previous_amount, precision: 2) %> to $<%= number_with_precision(adjustment.new_amount, precision: 2) %></p>
              <p class="text-gray-600">Interest adjusted from $<%= adjustment.previous_interest_rate %> to $<%= number_with_precision(adjustment.new_interest_rate, precision: 2) %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 space-x-4">
      <% if @loan.state == 'open' %>
        <%= button_to "Repay Loan", repay_loan_path(@loan), method: :patch, class: "inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
      <% end %>
    </div>
  </div>
</div>
