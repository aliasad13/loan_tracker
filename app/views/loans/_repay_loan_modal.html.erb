<div id="repayModal-<%= loan.id %>" class="hidden fixed inset-0 z-50">
  <div class="absolute inset-0 bg-black bg-opacity-70 transition-opacity"></div>
  <div class="fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-gray-800 border border-gray-700 px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md sm:p-6">
        <div class="absolute right-0 top-0 pr-4 pt-4">
          <button
            type="button"
            onclick="toggleRepayModal(<%= loan.id %>)"
            class="rounded-md bg-transparent text-gray-400 hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-600">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="text-center sm:text-left">
          <h3 class="text-2xl font-semibold leading-6 text-gray-100 mb-6">Repay Loan</h3>
          <p class="text-gray-300">Available Wallet Balance: <%= number_to_currency(loan.user.wallet.balance) %></p>
          <p id="user-wallet-balance-<%= loan.id %>" class="hidden"><%= loan.user.wallet.balance %></p>

        </div>

        <%= form_with(url: repay_loan_path, method: :patch, scope: :loan, local: true, id: "repay-form-#{loan.id}") do |f| %>
        <div class="mb-4">
          <%= f.label :payment_amount, "Payment Amount", class: "block text-sm font-medium text-gray-300" %>
          <%= f.number_field :payment_amount,
              class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 text-gray-100 py-2 px-3 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 placeholder-gray-400",
              value: payment_amount_value(loan),
              id: "payment-amount-#{loan.id}",step: "0.01",
          oninput: "validatePaymentAmount(#{loan.id}, #{loan.user.wallet.balance})" %>
        </div>
        <p id="error-message-<%= loan.id %>" class="text-red-500 text-sm hidden">Payment amount cannot be zero, negative or exceed your wallet balance.</p>
        <%= hidden_field_tag :id, loan.id %>

          <div class="mt-6 flex justify-end gap-3">
            <button
              type="button"
              onclick="toggleRepayModal(<%= loan.id %>)"
              class="inline-flex justify-center rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-medium text-gray-300 shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors duration-200">
              Cancel
            </button>
            <%= f.submit "Submit Payment",
                         class: "inline-flex justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors duration-200",
                         data: { disable_with: "Submitting..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

