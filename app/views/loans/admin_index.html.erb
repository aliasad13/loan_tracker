<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Loan Management</h1>

  <!-- Requested Loans Section -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Pending Requests</h2>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% if @loans.any? %>
        <table class="min-w-full">
          <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Interest Rate</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Request Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">State</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% @loans.each do |loan| %>
            <tr>
              <td class="px-6 py-4"><%= loan.user.email %></td>
              <td class="px-6 py-4">$<%= number_with_precision(loan.amount, precision: 2) %></td>
              <td class="px-6 py-4"><%= loan.interest_rate %>%</td>
              <td class="px-6 py-4"><%= loan.created_at.strftime("%B %d, %Y") %></td>
              <td class="px-6 py-4"><%= loan.state %></td>
              <td class="px-6 py-4 space-x-2">
                <%= render 'loan_action_buttons', loan: loan %>
                <% if loan.requested? || loan.readjustment_requested? %>
                  <button onclick="toggleModal(<%= loan.id %>)" class="inline-block px-3 py-1 bg-yellow-600 text-white rounded hover:bg-yellow-700">Adjust</button>
                <% end %>
              </td>
            </tr>
            <%= render 'adjust_modal', loan: loan %>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="p-6 text-center text-gray-500">
          <p>No pending loan requests.</p>
        </div>
      <% end %>
    </div>
  </div>

</div>