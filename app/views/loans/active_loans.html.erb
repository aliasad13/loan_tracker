<div class="container mx-auto px-4 py-8 bg-gray-900 text-gray-100">
  <h1 class="text-3xl font-bold mb-8 text-white">Active Loans</h1>

  <% @active_loans.each do |active_loan| %>
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-8 border border-gray-700">
      <h2 class="text-xl font-semibold mb-4 text-gray-200">Active Loan</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-700/50 p-4 rounded border border-gray-600">
          <p class="text-gray-400">Amount</p>
          <p class="text-2xl font-bold text-white">
            $<%= number_with_precision(active_loan.amount, precision: 2) %>
          </p>
        </div>

        <div class="bg-gray-700/50 p-4 rounded border border-gray-600">
          <p class="text-gray-400">Interest Rate</p>
          <p class="text-2xl font-bold text-white">
            <%= active_loan.interest_rate %>%
          </p>
        </div>

        <div class="bg-gray-700/50 p-4 rounded border border-gray-600">
          <p class="text-gray-400">Status</p>
          <p class="text-2xl font-bold capitalize text-white">
            <%= (active_loan.state).humanize %>
          </p>
        </div>
      </div>

      <%= link_to "View Details",
                  loan_path(active_loan),
                  class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-500 transition-colors duration-200" %>
    </div>
  <% end %>

  <div class="px-6 py-4">
    <div class="text-gray-400">
      <%= paginate @active_loans %>
    </div>
  </div>
</div>