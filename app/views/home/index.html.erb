<%# app/views/home/index.html.erb %>
<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 absolute inset-0 -mt-16">
  <div class="relative pt-32 pb-16 px-4">
    <div class="max-w-3xl mx-auto text-center text-white">
      <h1 class="text-5xl font-bold mb-6">Welcome to LoanTracker</h1>
      <p class="text-xl mb-8">Quick and easy loans for your needs</p>

      <div class="space-x-4">
        <%= link_to "Sign In", new_user_session_path,
                    class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Sign Up", new_user_registration_path,
                    class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>

    <!-- Features Section -->
    <div class="max-w-7xl mx-auto mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 px-4 sm:px-6 lg:px-8">
      <div class="bg-white bg-opacity-10 rounded-lg p-6 backdrop-blur-lg">
        <div class="text-white">
          <h3 class="text-xl font-semibold mb-4">Quick Process</h3>
          <p>Get your loan approved within minutes with our streamlined application process.</p>
        </div>
      </div>

      <div class="bg-white bg-opacity-10 rounded-lg p-6 backdrop-blur-lg">
        <div class="text-white">
          <h3 class="text-xl font-semibold mb-4">Competitive Rates</h3>
          <p>Enjoy competitive interest rates tailored to your needs.</p>
        </div>
      </div>

      <div class="bg-white bg-opacity-10 rounded-lg p-6 backdrop-blur-lg">
        <div class="text-white">
          <h3 class="text-xl font-semibold mb-4">Flexible Terms</h3>
          <p>Choose from flexible repayment terms that suit your financial situation.</p>
        </div>
      </div>
    </div>
  </div>
</div>